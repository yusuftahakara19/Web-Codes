@model List<AccountListModel>
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-6">
        <div class="card">
            <div class="card-body">
                <h5 class="card-title">User Information</h5>
                <p class="card-text">Name - Surname : @ViewBag.Fullname</p>
                <a asp-action="Index" asp-controller="Home" class="btn btn-primary">Go to User List</a>
            </div>
        </div>
    </div>
    <div class="col-6">
        <h5>Account(s) Information</h5>
        @if(Model.Count>0)
        {
            foreach(var account in Model)
            {
                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title">Account No : @account.AccountNumber</h5>
                        <p class="card-text">Balance : @account.Balance</p>
                        <a href="#" class="btn btn-primary">Send Money</a>
                    </div>
                </div>
            }
        }
        else
        {
            <div class="alert alert-danger" role="alert">
                Account not found
            </div>
        }
    </div>
</div>