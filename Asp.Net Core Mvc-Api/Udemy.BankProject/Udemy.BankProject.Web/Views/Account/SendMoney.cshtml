@model SelectList
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="mt-3">
    <form class="w-75 mx-auto" asp-action="SendMoney" method="post">
        <input type="hidden" name="SenderId" value="@ViewBag.SenderId"/>
        <div class="mb-3">
            <label>Account Number to Send :</label>
            <select class="form-select" asp-items="@Model" name="AccountId"></select>
        </div>
        <div class="mb-3">
            <label>Amount to Send :</label>
            <input type="number" name="Amount" class="form-control"></input>
        </div>
        <div>
            <button type="submit" class="btn btn-primary">Send Money</button>
        </div>
      
    </form>
</div>
